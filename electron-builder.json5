{
  appId: "com.mycompany.myvpn",
  productName: "MyVPN",
  asar: true,

  directories: {
    output: "release", // 打包输出目录
    buildResources: "build", // 图标等资源目录
  },

  files: ["dist/**", "dist-electron/**", "package.json"],

  extraMetadata: {
    main: "dist-electron/main.js",
  },

  mac: {
    target: ["dmg"], // 生成 dmg
    category: "public.app-category.utilities",
    icon: "build/icon.icns", // 暂时可以不存在，只是个路径
    identity: null, // ⚠️ 关闭自动签名
    hardenedRuntime: false,
    gatekeeperAssess: false,
  },

  dmg: {
    sign: false, // dmg 本身也不签名
  },

  win: {
    target: ["nsis"], // Windows 生成安装程序 .exe
    icon: "build/icon.ico",
    artifactName: "MyVPN-${version}-win-${arch}.${ext}",
  },
}
